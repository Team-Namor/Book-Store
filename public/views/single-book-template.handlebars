{{#book}}
<div class="container" id="single-book-page">
   <div class="row">
       <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5" id="single-book-cover">
           <img src="{{_imgURL}}" alt="book cover">
       </div>
       <div class=" col-lg-7" id="single-book-info">
           <h2>{{_title}}</h2>
           <p>
               <span><b>Author: </b>{{_author}}</span>
               <span><b>Year: </b>{{_year}}</span>
               <span><b>Category: </b>{{_category}}</span>
           </p>
           <p>
               <span><b>Description: </b>{{_description}}</span>
           </p>
       </div>
       <div class=" col-lg-7" id="single-book-info">
            <button class="btn btn-success" id="like-btn" type="submit">Likes <i>{{likes}}</i></button>
       </div>
            
     </div>
</div>
{{/book}}
