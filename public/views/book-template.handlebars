<div class="container">
    <div class="row">
        <h1 id="header-books" class="page-title">Books in our store</h1>
    </div>

    <div id="books-list-sidebar" class="sidebar col-md-3 pull-right">
        <div id="search-bar" class="col-md-12">
            <div class="input-group add-on">
                <input class="form-control" id="search-value" placeholder="Search books" type="text">
                <div class="input-group-btn">
                    <button class="btn btn-success" id="search-btn" type="submit">
                        <i class="fa fa-search  fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <aside id="categories-filter">
            <div class="subtitle">
                <h3>Book Categories</h3>
            </div>
            <div class="categories-list">
                <ul>
                    {{#each categories}}
                        <li class="cat-list-item">
                            <a href="/#search/{{_name}}&1&true">{{_name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </aside>
    </div>

    <div id="books-list-gallery" class="col-md-9">

        <div class="row text-primary">
            {{#each books.book}}
                <div class="book col-xs-6 col-sm-4 col-md-4  col-lg-4 text-primary" id="{{_id}}">
                    <div class="book-wrapper">
                        <a href="#books/{{_id}}">
                            <img class="book-cover" src="{{_imgURL}}" alt="bookCover">
                            <ul class='book-info'>
                                <li class="title">{{_title}}</li>
                                <li class="price">${{_price}}</li>
                            </ul>
                        </a>
                        <button class="btn btn-blue" id="add-to-cart-btn" type="submit" book-target="{{_id}}">Add to cart</button>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="row">
            <ul class="pagination">
                <!--<li class="page-item">
                     <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                     </a>
                </li>-->
                {{#if books.hasQuery}}
                    {{#each books.size}}
                        <li class="page-item"><a href="#search/{{this}}&{{inc @index}}" class="page-link" >{{inc @index}}</a></li>
                    {{/each}}
                {{else}}
                    {{#each books.size}}
                        <li class="page-item"><a href="#books/page/{{inc @index}}" class="page-link" >{{inc @index}}</a></li>
                    {{/each}}
                {{/if}}
                <!--<li class="page-item">
                   <a class="page-link" href="#" aria-label="Next">
                       <span aria-hidden="true">&raquo;</span>
                       <span class="sr-only">Next</span>
                   </a>
                </li>-->
            </ul>
        </div>
    </div>
</div>